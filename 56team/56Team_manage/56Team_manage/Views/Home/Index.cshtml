@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>56工作室平台管理系统</title>
    
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    欢迎你：@Session["Name"].ToString() 
    <img src="~/Image/20141109052147735_easyicon_net_128.ico" />
    <table>
        <tr><td>用户名：@Session["Name"].ToString()</td></tr>
        <tr><td>专业：@ViewBag.major</td></tr>
        <tr><td>院系：@ViewBag.department</td></tr>
