    <button type="button" class="btn btn-lg btn-primary">56工作室简介</button>
    <button type="button" class="btn btn-default btn-lg" disabled="disabled">查看小组信息</button>
    @Html.ActionLink("退出", "Index", "Login")
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

