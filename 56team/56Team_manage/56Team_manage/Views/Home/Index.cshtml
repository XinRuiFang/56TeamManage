    <a href="Home/MessageChange" class="btn btn-primary btn-lg active" role="button" >个人信息设置</a>
    <a href="#" class="btn btn-default btn-lg active" role="button">公告</a>
    <a href="#" class="btn btn-primary btn-lg active" role="button">申请入组</a>
    <a href="#" class="btn btn-default btn-lg active" role="button">留言板</a>
    <button type="button" class="btn btn-lg btn-primary">56工作室简介</button>
    <button type="button" class="btn btn-default btn-lg" disabled="disabled">查看小组信息</button>
    @Html.ActionLink("退出", "Index", "Login")*@
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</body>
</html>
