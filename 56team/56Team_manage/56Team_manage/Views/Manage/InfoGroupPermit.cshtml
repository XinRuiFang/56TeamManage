@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>进组申请审批</title>
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet">
    <style type="text/css">
        body {
            background: url(../../Image/back.jpg);
            background-size: cover;
        }

        #title {
            font-family: "微软雅黑";
            font-size: 50px;
            position: relative;
            top: 20px;
            text-decoration: underline;
        }

        #sctitle {
            font-family: "微软雅黑";
            font-size: 30px;
        }

        #titlediv {
            background: url(../../Image/5c1f6acc79984b8f1e8ece9b19ca7afe.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            width: 800px;
            height: 140px;
            border-bottom-color: aliceblue;
            border-style: inset;
            position: relative;
            left: 300px;
        }
        #homediv {
            width: 800px;
            height: 400px;
            position: relative;
            left: 300px;
            background-color: aliceblue;
            background-size: cover;
        }
    </style>
   
</head>
<body>
    <div>
        <div id="titlediv">
            <div id="title" style="color:white">进组申请审批</div><br />
            <div id="sctitle" style="color:white">Invitation Permit</div>
        </div>
        <div id="homediv">
            <table border="1" style="text-align:center;border-collapse:collapse;background-color:aliceblue;" class="table">
                <tr>
                    <th>用户名</th>
                    <th>姓名</th>
                    <th>性别</th>
                    <th>院系</th>
                    <th>年级</th>
                    <th>所申请进入的组</th>
                    <th>操作</th>
                </tr>
                @foreach (var item in Model)
                {
                    using (Html.BeginForm("PassPermit", "Manage", FormMethod.Post))
                    {
                    <tr>
                        <td> <input type="text" class="form-control" name="userName" placeholder="@item.user_name" readonly="readonly" value="@item.user_name"></td>
                        <td>@item.user_realname</td>
                        <td>
                            @if (item.user_gender == "1")
                            {
                                @:@("男")
                                }
                        @if (item.user_gender == "0")
                        {
                            @:@("女")
                                }
                    </td>
                    <td>
                        @if (item.user_major.ToString() == "1")
                        {
                            @:@("经济管理学院")
                                }
                    @if (item.user_major.ToString() == "2")
                    {
                        @:@("外国语学院")
                                }
                    @if (item.user_major.ToString() == "3")
                    {
                        @:@("理学院")
                                }
                    @if (item.user_major.ToString() == "4")
                    {
                        @:@("软件学院")
                                }
                    @if (item.user_major.ToString() == "5")
                    {
                        @:@("艺术学院")
                                }
                    @if (item.user_major.ToString() == "6")
                    {
                        @:@("其他")
                                    }
                    </td>
                    <td>
                        @if (item.user_grade.ToString() == "1")
                        {
                            @:@("一年级")
                                    }
                    @if (item.user_grade.ToString() == "2")
                    {
                        @:@("二年级")
                                    }
                    @if (item.user_grade.ToString() == "3")
                    {
                        @:@("三年级")
                                    }
                    @if (item.user_grade.ToString() == "4")
                    {
                        @:@("四年级")
                                    }
                    @if (item.user_grade.ToString() == "5")
                    {
                        @:@("五年级")
                                    }
                    @if (item.user_grade.ToString() == "6")
                    {
                        @:@("其他")
                                    }

                         </td>
                        <td>
                            @if (item.user_group.ToString() == "0")
                            {
                                @:@("C#") 
                            }
                            @if (item.user_group.ToString() == "1")
                            {
                                @:@("Java")
                            }
                            @if (item.user_group.ToString() == "2")
                            {
                                @:@("UI")
                            }
                            @if (item.user_group.ToString() == "3")
                            {
                                @:@("运维")
                            }
                            @if (item.user_group.ToString() == "4")
                            {
                                @:@("数据库")
                            }
                        </td>
                        <td>
                            <button type="submit" class="btn btn-primary">通过</button>
                        </td>
        </tr>

                 }
                }
            </table>

        </div>
    </div>
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
