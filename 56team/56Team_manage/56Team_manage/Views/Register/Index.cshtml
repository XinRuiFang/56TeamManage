@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>注册</title>
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet">
    <script type="text/javascript" src="~/Scripts/jquery-1.8.2.js">
        
    </script>
    <style type="text/css">
         #titlediv {
             
             background:url(../../Image/5c1f6acc79984b8f1e8ece9b19ca7afe.jpg);
             background-repeat:no-repeat;
             background-size:cover;                         
             width:800px;
             height:140px;     
             border-bottom-color:aliceblue;
             border-style:inset;
             position:relative;
             left:300px;
        }
        body {
            background:url(../../Image/back.jpg);
            background-size:cover;
        }
          #title {
            font-family:"微软雅黑";
            font-size:50px;
            position:relative;
            top:20px;
            text-decoration:underline;
        }
        #sctitle {
            font-family:"微软雅黑";
            font-size:30px;
        }
        #registerdiv {
            width:800px;
            height:500px;
            
            position:relative;
            left:400px;
        }
        #vimg {            
            position:relative;    
            top:227px;            
        }
    </style>
</head>
<body>
    <div id="backGround">
        <div id="titlediv">
            <div id="title" style="color:white">56工作室注册</div><br />
            <div id="sctitle" style="color:white">56 Team Register</div>
        </div>
        <div id="registerdiv">
            @using (Html.BeginForm("Index", "Register", FormMethod.Post))
            {
                <div class="col-xs-2" style=" width:600px;height:64px;position:relative;top:10px;">
                    <label class="col-sm-4 control-label" style="font-family:'微软雅黑';font-size:15px;">请输入用户名：</label>
                    
                    @*@using (Html.BeginForm("TestUserName", "Register", FormMethod.Post))
                    {*@
                     <input type="text" name="userName" class="form-control" placeholder="请输入6-13个字符">
                        @*<button type="submit" class="btn btn-info">用户名是否可用？</button>*@
                    @*}*@
                    
                </div>
                <div class="col-xs-2" style=" width:600px;height:64px;position:relative;top:10px;">
                    <label class="col-sm-4 control-label" style="font-family:'微软雅黑';font-size:15px;">密码:</label>
                    <input type="password" name="userPwd" id="pwdFirst" class="form-control" placeholder="请输入6-20位密码" >
                </div>
                <div class="col-xs-2" style=" width:600px;height:64px;position:relative;top:10px;">
                    <label class="col-sm-4 control-label" style="font-family:'微软雅黑';font-size:15px;">请再输入一次密码:</label>
                    <input type="password" id="pwdSconed" name="userPedSconed" class="form-control" placeholder="Password...">
                </div>
                <div class="col-xs-2" style=" width:600px;height:64px;position:relative;top:10px;">
                    <label class="col-sm-4 control-label" style="font-family:'微软雅黑';font-size:15px;">验证码:</label>
                    <input type="text" class="form-control" name="vcode" id="vcode" placeholder="Verification Code...">
                </div>
                <img id="vimg" src="/Vcode/getVcode" />
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-info" id="btn" style="position: relative; top: 17px;left:135px;">提交</button>
                        <div style="font-family:'微软雅黑';font-size:12px;position:relative;left:350px;top:-10px;">@Html.ActionLink("返回登陆", "Index", "Login")</div>
                    </div>
                </div>       
            }            
        </div>
    </div>
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>  
    
</body>
</html>
