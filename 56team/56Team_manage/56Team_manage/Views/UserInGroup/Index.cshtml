@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>56工作室进组申请</title>
    <link href="~/Scripts/bootstrap.min.css" rel="stylesheet">
    <style type="text/css">
        body {
            background: url(../../Image/back.jpg);
            background-size: cover;
        }

        #title {
            font-family: "微软雅黑";
            font-size: 50px;
            position: relative;
            top: 20px;
            text-decoration: underline;
        }

        #sctitle {
            font-family: "微软雅黑";
            font-size: 30px;
        }

        #titlediv {
            background: url(../../Image/5c1f6acc79984b8f1e8ece9b19ca7afe.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            width: 800px;
            height: 140px;
            border-bottom-color: aliceblue;
            border-style: inset;
            position: relative;
            left: 300px;
        }

        #weldiv {
            width: 800px;
            height: 50px;
            position: relative;
            left: 300px;
            font-family: "微软雅黑";
            font-size: 20px;
            background: url(../../Image/back1.jpg);
            background-size: cover;
        }
        #homediv {
            width:800px;
             height:400px;
             position:relative;
             left:300px;   
             
             background-color:aliceblue;
             background-size:cover;
        }
         </style>
    <script  src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script>
        window.onload = function (){
            var aLi = document.getElementsByTagName("li");
            var i = 0;
            for (i = 0; i < aLi.length; i++)
            {
                aLi[i].onclick = function (){
                    for (i = 0; i < aLi.length; i++)
                        aLi[i].className = aLi[i].className.replace(/\s?active/, "");
                this.className += "active";
            };
        }
    };
    </script>
</head> 
<body> 
    <div> 
        <div id="titlediv">
            <div id="title" style="color:white">56工作室进组申请</div><br />
            <div id="sctitle" style="color:white">56Team Invitation</div>
        </div>
        <div id="weldiv">@Session["Name"].ToString()，欢迎你加入56Team！&nbsp;:)</div>
        <div id="homediv">
            <ul class="nav nav-pills" role="tablist">
                <li id="li1" role="presentation"><a href="Index">C#</a></li>
                <li id="li2" role="presentation"><a href="GetJava">Java</a></li>
                <li id="li3" role="presentation"><a href="GetUI">UI</a></li>
                <li id="li4" role="presentation"><a href="GetIO">运维</a></li>
                <li id="li5" role="presentation"><a href="GetDb">数据库</a></li>
            </ul>
            <div class="panel panel-default">
                <div class="panel-body">
                    @ViewBag.Test
                </div>
            </div>
                <div>
                    @using (Html.BeginForm("GetSubmit", "UserInGroup", FormMethod.Post))
                    {
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-info" id="submit" style="position: relative; top: 17px;left:-5px;">确定</button>
                        </div>
                    }
            </div>
        </div>
    </div> 
    <script src="http://cdn.bootcss.com/jquery/1.11.1/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body> 
</html>
        